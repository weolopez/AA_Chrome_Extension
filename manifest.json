{
  "name": "Auto Architect",
  "description": "Auto Architect",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "permissions": [
    "identity",
    "activeTab",
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "notifications",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "sidePanel",
    "nativeMessaging"
  ],
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "side_pane.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}

